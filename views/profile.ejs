<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form hidden id="uploadForm" action="/fileUpload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-20">            
            <div class="relative">
                <span id="uploadIcon" class="w-8 h-8 rounded-full absolute bottom-0 right-0 flex items-center justify-center bg-zinc-200">
                    <i class="ri-pencil-fill text-zinc-800"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="<%=user.profileImage %>" alt="profile Image">
                </div>
            </div>            
            <h1 class=" text-2xl font-semibold mt-5 "><%= user.name %></h1>
            <h3 class="text-md">@<%= user.username%></h3>
            <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold mt-3">Edit</a>
            <a href="/add" class="px-10 py-2 mt-10 rounded-lg bg-red-700 text-xs font-semibold">New post</a>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-40 h-36 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="<%= user?.posts[0]?.image %>" alt="Akatski">
            </div>
            <a href="/show/posts" class="text-xl font-semibold mt-3 inline-block">Your pins</a>
            <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %></h5>
        </div>
        <!-- <div class="card">
            <div class="w-40 h-36 bg-zinc-200 rounded-lg "></div>
            <h3 class="text-xl font-semibold mt-3">All pins</h3>
            <h5 class="text-sm font-medium">28 pins</h5>
        </div> -->
        </div>   
    </div>
    <script>
        document.querySelector('#uploadIcon').addEventListener("click", function(){
            document.querySelector('#uploadForm input').click()
        })
        document.querySelector('#uploadForm input').addEventListener('change', function(){
            document.querySelector('#uploadForm').submit();
        })
    </script>
